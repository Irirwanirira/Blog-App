<article>
    <h1><%= @post.title + ' by ' + @post.author.name %></h1>
    <section>
        <p>Comments: <%= @post.comments.count || 0 %></p>
        <p>Likes: <%= @post.likes.count || 0 %></p>
    </section>
    <section>
        <p><%= @post.text %></p>
    </section>
    <section>
        <% @post.comments.each do |comment| %>
            <article>
                <p><%= comment.author.name + ': ' + comment.text %></p>
            </article>
         
              <% if can? :destroy, comment %>
              <%= button_to 'Delete Comment', user_post_comment_path(@user, @post.id, comment.id), method: :delete %><%end%>
        
        <%end%> </br>
        
    </section>
    <section>
        <%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/likes" do |f| %>
            <%= f.submit "Like" %>
        <% end %>
    </section>
    <section>
        <h1>Add Comment</h1>
        <%= form_with model: @comment, url: user_post_comments_path(@post.author, @post), method: :post, local: true, scope: :comment, class: "form" do |form| %>
        <section>
            <%= form.label :text %>
            <%= form.text_area :text, class: "form-text" %>
            <%= form.submit "Add Comment" %>
        </section>
        <% end %>
    </section>
    
</article>