<h1>Posts</h1>
<p> Shows info for Joseph posts </p>
<div> 

    <section class="main_post">
      <div>
        <p>  
            Posst #<%= @post.id %> by @post.author.name%
        </p>

        <p> 
            <span>
                Comments: <%= @post.comments_counter || 0 %>,
                Likes: <%= @post.likes_counter || 0 %>
            </span
        </p>
      </div>
        <p><%= @post.Text%></p>
    </section>

    <div >
        <% @post.recent_comments.each do |comment| %>
            <div>
                <p> 
                <span>
                    <%= comment.author.name %>:
                </span>
                <span>
                    <%= comment.text %>
                </span>
                </p>
            </div>
        
        <% end %>
    </div>

    <%= link_to new_user_post_comment_path(post_id: @post.id) do %>
        <button>Create comment</button>
    <% end %>
</div>
